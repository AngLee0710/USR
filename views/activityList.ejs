<%- include header %>
<header class="blog-header py-3">
	<div class="row flex-nowrap justify-content-between align-items-center">
		<div class="col-4 d-flex justify-content-end align-items-center"></div>
	</div>
</header>
<%- include nav2 %>
<%- include to_Top %>
<br><br><br><br><br>
<div class="row mb-2">
	<div class="col-md-12">
		<% posts.forEach(function(post, index) {%>
				<div class="col-md-12 card-body d-flex flex-column align-items-start card flex-md-row mb-4 box-shadow">
					<div class="col-md-9 activity_txt"><img src="/images/activity.png" style="width: auto;height: 60px;padding-right:5px;">
						[<%= new Date(post.ACT_C_AT).toLocaleDateString() %>]&nbsp;&nbsp;&nbsp;
						
						<a href="/activity/<%= post._id %>"><%- post.ACT_SUBJ_NAME  %></a>
						
					</div>
				</div>			
		<% }) %>
	</div>
</div>
<%- include paging %>
<%- include footer %>