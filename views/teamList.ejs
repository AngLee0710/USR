<%- include header %><%- include nav2 %>
<body>
  <br>
  <div class="row mb-2">
    <div class="col-md-3">
      <div id="menu">
        <%leaders.forEach((leader, index) => { %>
        <div class="item">
          <div class="main">
            <%= leader.name %><%= leader.title %>
          </div>
          <div class="sub">
            <ul>
              <%if(leader.teams.length == 0) {%>
              <li>
                <a href="#">尚未擁有隊伍</a>
              </li><%}else{ %><%leader.teams.forEach((team, index) => { %>
              <li>
                <a href="/team/<%= team.name %>"> <%= team.name %></a>
              </li><%}) %><%} %>
            </ul>
          </div>
        </div><%}) %>
      </div>
      <script src="jquery-1.11.2.min.js">
      </script> 
      <script>
      $(document).ready(function(){
                  
               for(i=0;i<$(".main").length;i++){
                 $(".sub").slideUp(0)
                   $(".main:eq("+i+")").click({id:i},function(e){
                       n=e.data.id                   
                       $(".sub:eq("+n+")").slideToggle()
                       $(".sub:not(:eq("+n+"))").slideUp()
                   })
               }
               $("#menu").css("width",$(".main").length*100)
           })
      </script>
    </div>
    <script>
              $(document).bind('click', function(e) {
                  var $clicked = $(e.target);
                  if (!$clicked.parents().hasClass("dropdown")) $(".dropdown dd ul").hide();
              });

              $(".dropdown dt a").on('click', function() {
                  $(".dropdown dd ul").slideToggle('fast');
              });
    </script> <%teams.forEach(function(team, index) {%>
    <div class="col-md-9">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <h2><strong class="d-inline-block mb-2 text-success"><a href="/team/<%= team.name %>"><%= team.name %></a></strong></h2>
          <p class="card-text mb-auto">服務宗旨: <%= team.purpose %></p>
        </div>
      </div>
    </div>
  </div><%}) %>
  <%- include paging %><%- include footer %>
