<%- include header %>
    <%- include nav2 %>
        <br>
        <%- include icon_G %>

        <div id="MyBlog">
          <a href="#top"><img src="/images/top.png" style="height:100%;width:100%;"></a>
        </div>


        <div class="col-12 txt_s">
          <img src="/images/Act.png" style="width: auto;height: 50px;display:block; margin:auto;">
          <br><hr><br><br>
        </div>
        <div class="col-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <% var j = 0 %>
                    <% posts.forEach((post, index) => { %>
                    <% if(post.imgArr.length > 0) { %>
                    <% if(j == 0) {%>
                    <li data-target="#myCarousel" data-slide-to="<% j %>" class="active"></li>
                    <% j++ %>
                    <% }else{ %>
                    <li data-target="#myCarousel" data-slide-to="<% j %>"></li>
                    <% }}}) %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <% var i = 0 %>
                    <% posts.forEach((post, index) => { %>
                    <% if(post.imgArr.length > 0) { %>
                    <% if(i == 0) {%>
                    <% i++ %>
                    <div class="item active">
                    <% }else{ %>
                    <div class="item">
                    <% } %>     
                        <img src="<%= post.imgArr[0].url %>" alt="image" style="width:100%;height:700px; object-fit: cover;">
                        <div class="carousel-caption">
                            <h3><% post.title %></h3>
<!--                             <p>LA is always so much fun!</p> -->
                        </div>
                    </div>
                    <% } %>
                    <% }) %>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
      
        
        <%- include footer %>