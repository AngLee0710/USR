<%- include header %>
    <%- include nav2 %>
        <br>
        <div class="col-12">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <% var j = 0 %>
                    <% posts.forEach((post, index) => { %>
                    <% if(post.imgArr.length > 0) { %>
                    <% if(j == 0) {%>
                    <li data-target="#myCarousel" data-slide-to="<% j %>" class="active"></li>
                    <% j++ %>
                    <% }else{ %>
                    <li data-target="#myCarousel" data-slide-to="<% j %>"></li>
                    <% }}}) %>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <% var i = 0 %>
                    <% posts.forEach((post, index) => { %>
                    <% if(post.imgArr.length > 0) { %>
                    <% if(i == 0) {%>
                    <% i++ %>
                    <div class="item active">
                    <% }else{ %>
                    <div class="item">
                    <% } %>     
                        <img src="<%= post.imgArr[0].url %>" alt="image" style="width:100%;height:700px; object-fit: cover;">
                        <div class="carousel-caption">
                            <h3><% post.title %></h3>
<!--                             <p>LA is always so much fun!</p> -->
                        </div>
                    </div>
                    <% } %>
                    <% }) %>
                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-6">
                <div class="card flex-md-row mb-4 box-shadow">
                    <div class="card-body d-flex flex-column align-items-start">
                        <% posts.forEach(function(post, index) {%>
                            <div style="width: 100%">
                                <strong class="d-inline-block mb-2 text-primary">最新消息</strong>
                                <h2 class="mb-0">
                                  <a class="text-dark" href="#"><%= post.title %></a>
                                </h2>
                                <div class="mb-1 text-muted">
                                    <%= new Date(post.time).toLocaleDateString()  %>
                                </div>
                                <h4 class="card-text mb-auto">
                                    <%- post.content %>
                                </h4>
                                <br>
                                <div style="text-align: right;">
                                    <a href="/activity/<%= encodeURIComponent(post.title) %>/<%= post.time %>">Continue reading</a>
                                </div>
                                
                            </div>
                            <% if (index < 2) {%>
                                <hr width="100%" />
                            <% }else{ %>
                                <br />
                            <% } %>
                        <% }) %>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-success">活動消息</strong>
                        <h3 class="mb-0">
                        <a class="text-dark" href="#">Post title</a>
                        </h3>
                        <div class="mb-1 text-muted">Nov 11</div>
                        <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p>
                        <a href="#">Continue reading</a>
                    </div>
                </div>

                
            </div>
        </div>
        <%- include footer %>