<div class="col-12 teamManageNewPage" id="editPage" style="display: none;">
    <form class="col-12" method="post" action="/team/edit" encType="multipart/form-data">
        <div id="formDIV" class="row">
            <input id="editID" type="hidden" name="teamID">
            <div class="form-group col-sm-6 col-12">
                <label for="editInputID1">團隊名稱：</label>
                <input type="text" class="form-control myInput" id="editInputID1" name="name">
            </div>
            <div class="form-group col-sm-6 col-12">
                <label for="editInputID2">團隊負責人：</label>
                <input type="text" class="form-control myInput" id="editInputID2" name="leader">
            </div>
            <div class="form-group col-12">
                <label for="textareaID1">團隊服務宗旨：</label>
                <textarea class="form-control" id="textareaID1" rows="3" name="purpose"></textarea>
            </div>
            <div class="form-group col-12">
                <label for="textareaID2">團隊介紹：</label>
                <textarea class="form-control" id="textareaID2" rows="3" name="introduction"></textarea>
            </div>
            <div class="form-group col-12">
                <label for="textareaID3">團隊專業：</label>
                <textarea class="form-control" id="textareaID3" rows="3" name="pro_introduction"></textarea>
            </div>
            <div class="form-group col-sm-6 col-12">
                <label for="editInputID3">團隊網站：</label>
                <input type="text" class="form-control myInput" id="editInputID3" name="website">
            </div>
            <div class="col-6"></div>
            <div class="col-12">
                <p>聯絡方式：</p>
            </div>
            <div class="form-group col-6">
                <label for="editInputID4">聯絡人姓名：</label>
                <input type="text" class="form-control myInput" id="editInputID4" name="conecntName">
            </div>
            <div class="form-group col-6">
                <label for="editInputID5">聯絡人電話：</label>
                <input type="text" placeholder="09xxxxxxxx" class="form-control myInput" id="editInputID5" name="phone">
            </div>
            <div class="form-group col-12">
                <label for="editInputID6">團隊信箱：</label>
                <input type="email" placeholder="example@com" class="form-control myInput" id="editInputID6" name="email">
            </div>
            <div class="form-group col-12">
                <img class="img-fluid img-thumbnail" width="100" height="100" id="editInputID8"><br />
                <label for="file1">團隊Icon上傳</label>
                <input type="file" class="form-control-file" id="editFile2" name="editTeamIcon">
            </div>
            <div class="form-group col-12">
                <img class="img-fluid" id="editInputID9" width="200" height="200"><br />
                <label for="file1">團隊Logo上傳</label>
                <input type="file" class="form-control-file" id="editFile1" name="editTeamLogo">
            </div>
            <div class="form-group col-12">
                <img class="img-fluid" id="editInputID7"><br />
                <label for="file1">團隊合照上傳</label>
                <input type="file" class="form-control-file" id="editFile1" name="editTeamImg">
            </div>
            <div class="col-8"></div>
            <div class="col-sm-8 col-0"></div>
            <div class="col-sm-4 col-12">
                <input style="width: 100%;" class="btn btn-warning" type="submit" value="修改團隊" />
            </div>
        </div>
    </form>
</div>
<style>
    .teamManageNewPage{
        font-size: 18px;
    }
</style>
<script type="text/javascript">
    $('#editInputID5').keyup(function() {
        if(this.value[this.value.length - 1] < '0' || this.value[this.value.length - 1] > '9')
            this.value = this.value.substring(0, this.value.length - 1);
        if(this.value.length > 10)
            this.value = this.value.substring(0, 10);
    });
</script>