<div class="col-12 teamManageNewPage" id="newPage" style="display: none;">
    <form class="col-12" method="post" action="/teamCreate" encType="multipart/form-data">
        <div id="formDIV" class="row">
            <div class="form-group col-sm-6 col-12">
                <label for="inputID1">團隊名稱：</label>
                <input type="text" class="form-control" id="inputID1" name="name">
            </div>
            <div class="form-group col-sm-6 col-12">
                <label for="inputID2">團隊負責人：</label>
                <input type="text" class="form-control" id="inputID2" name="leader">
            </div>
            <div class="form-group col-12">
                <label for="textareaID1">團隊服務宗旨：</label>
                <textarea class="form-control" id="textareaID1" rows="3" name="purpose"></textarea>
            </div>
            <div class="form-group col-12">
                <label for="textareaID2">團隊介紹：</label>
                <textarea class="form-control" id="textareaID2" rows="3" name="introduction"></textarea>
            </div>
            <div class="form-group col-12">
                <label for="textareaID3">團隊專業：</label>
                <textarea class="form-control" id="textareaID3" rows="3" name="pro_introduction"></textarea>
            </div>
            <div class="form-group col-sm-6 col-12">
                <label for="inputID3">團隊網站：</label>
                <input type="text" class="form-control" id="inputID3" name="website">
            </div>
            <div class="col-6"></div>
            <div class="col-12">
                <p>聯絡方式：</p>
            </div>
            <div class="form-group col-6">
                <label for="inputID4">聯絡人姓名：</label>
                <input type="text" class="form-control" id="inputID4" name="conecntName">
            </div>
            <div class="form-group col-6">
                <label for="inputID5">聯絡人電話：</label>
                <input type="text" placeholder="09xxxxxxxx" class="form-control" id="inputID5" name="phone">
            </div>
            <div class="form-group col-12">
                <label for="inputID6">團隊信箱：</label>
                <input type="email" placeholder="example@com" class="form-control" id="inputID6" name="email">
            </div>
            <div class="form-group col-12">
                <label for="file3">團隊LOGO上傳</label>
                <input type="file" class="form-control-file" id="file3" name="teamLogo">
            </div>
            <div class="form-group col-12">
                <label for="file2">團隊GoogleMapIcon上傳</label>
                <input type="file" class="form-control-file" id="file2" name="teamIcon">
            </div>
            <div class="form-group col-12">
                <label for="file1">團隊合照上傳</label>
                <input type="file" class="form-control-file" id="file1" name="teamImg">
            </div>
            <div class="col-8"></div>
            <div class="col-sm-8 col-0"></div>
            <div class="col-sm-4 col-12">
                <input style="width: 100%;" class="btn btn-warning" type="submit" value="新增團隊" />
            </div>
        </div>
    </form>
</div>
<style>
    .teamManageNewPage{
        font-size: 18px;
    }
</style>
<script type="text/javascript">
    $('#inputID5').keyup(function() {
        if(this.value[this.value.length - 1] < '0' || this.value[this.value.length - 1] > '9')
            this.value = this.value.substring(0, this.value.length - 1);
        if(this.value.length > 10)
            this.value = this.value.substring(0, 10);
    });
</script>